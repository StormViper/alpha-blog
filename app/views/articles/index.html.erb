<body style="text-align: center;">
	<h1>Listing all articles</h1>
	<%= link_to "Create new article", new_article_path%>

<table class="table" style="width: 70%; margin-right: auto; margin-left: auto;">
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>User</th>
	</tr>
<% @articles.each do |art| %>
	<tr>
		<td style="font-weight: bold;"><%= art.title %></td>
		<td style="font-weight: bold;"><%= art.description %><br />
		<div class="article-meta-details">
			<small>Created by: <%= art.user.username %>,
		 			 	 <%= time_ago_in_words(art.created_at) %> ago,
		 			 	 last updated: <%= time_ago_in_words(art.updated_at) %> ago </small></td>
		 </div>
		<td style="font-weight: bold;"><%= link_to 'Edit', edit_article_path(art) %></td>
		<td style="font-weight: bold;"><%= link_to 'Show', article_path(art) %></td>
		<td style="font-weight: bold;"><%= link_to 'Delete', article_path(art), method: :delete, data: {confirm: "Are you sure?"} %></td>
	</tr>
<% end %>
</table>
</body>